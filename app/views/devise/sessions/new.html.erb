
<% content_for :title, "Sign In" %>
<%=image_tag("EmeraldLogo.png", :class => "logo")%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<div class="parent">
    <%= f.label :username, class: "label" %>
    <div class="username">
        <%= f.text_field :username, class: "form" %>
    </div>

    <div class="pass-parent">
    <%= f.label :password, class: "label" %>
    <div class="password">
        <%= f.password_field :password, autocomplete: "off", class: "form" %>
    </div>
    </div>
        <%= f.submit "Sign in", class: 'signin' %>
<% if devise_mapping.rememberable? -%>
<div class="form-group">
    <div class="label remember">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
</div>
<% end -%>
<%= link_to "Forgot Password?", new_user_password_path, :class => "fp" %>
</div>

<% end %>

